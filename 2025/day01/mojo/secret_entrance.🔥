from sys import argv
from pathlib import Path


comptime DIAL_LEN = 100


def parse_input(file: String) -> List[Int]:
    with open(file, "r") as f:
        input = f.read()

    combination: List[Int] = []
    for line in input.splitlines():
        sign = 1 if line[0].upper() == "R" else -1
        rotate = Int(line[1:])
        combination.append(sign * rotate)
    return combination^


def part_1(read combination: List[Int]) -> Int:
    loc = 50
    zeros = 0
    for turn in combination:
        loc = (loc + turn) % DIAL_LEN
        if loc == 0:
            zeros += 1
    return zeros


def part_2(read combination: List[Int]) -> Int:
    loc = 50
    zeros = 0
    for turn in combination:
        change = loc + turn
        loc_n = change % DIAL_LEN

        if loc == 0:
            z_clicks = abs(change) // DIAL_LEN
        elif change <= 0:
            z_clicks = abs((change - 1) // DIAL_LEN)
        else:
            z_clicks = abs(change // DIAL_LEN)
        zeros += z_clicks
        loc = loc_n
    return zeros


def main():
    args = [arg for arg in argv()]
    filename = args[1]
    file = Path(filename)
    if not file.exists():
        raise "Input file does not exist"
    combination = parse_input(filename)

    if "--part1" in args:
        pw = part_1(combination)
        print("The password (Part 1) is:", pw)

    if "--part2" in args:
        pw = part_2(combination)
        print("The password (Part 2) is:", pw)
